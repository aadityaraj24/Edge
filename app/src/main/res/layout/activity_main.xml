<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edge_white"

            />
        <ImageButton
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/facebook"
            android:id="@+id/imageButton2" />
        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view"
           android:background="@drawable/youtube"
            android:gravity="center_vertical|center_horizontal"

            android:id="@+id/imageButton10"/>
        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view"
            android:background="@drawable/technoindia"
            android:gravity="center_vertical|center_horizontal"

            android:id="@+id/imageButton11"/>
        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view"
            android:background="@drawable/geekonix"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/imageButton12"/>
    </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#768282"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:id="@+id/view" />




        <ImageButton
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/view"
            android:id="@+id/events"
            android:background="@drawable/events"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"


            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/imageButton3"
            android:id="@+id/megaevents"
            android:layout_marginTop="6dip"
            android:background="@drawable/megaevents"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/imageButton4"
            android:id="@+id/funevents"
            android:layout_marginTop="6dip"
            android:background="@drawable/fun_events"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true" />
        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/imageButton5"
            android:id="@+id/campusambassador"
            android:layout_marginTop="6dip"
            android:background="@drawable/campus_ambasaddors"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true" />
        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/imageButton6"
            android:id="@+id/team"
            android:layout_marginTop="6dip"
            android:background="@drawable/teamedge"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true" />
        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/imageButton7"
            android:layout_marginBottom="5dp"
            android:id="@+id/sponsors"
            android:layout_marginTop="6dip"
            android:background="@drawable/sponsors"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true" />
        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/imageButton7"
            android:layout_marginBottom="5dp"
            android:id="@+id/aboutus"
            android:layout_marginTop="6dip"
            android:background="@drawable/aboutus"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true" />




    </LinearLayout>
</ScrollView>
